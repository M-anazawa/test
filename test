name: Deploy index.html to S3

on:
  workflow_dispatch:
    inputs:
      file_path:
        description: 'Path to the index.html file to deploy'
        required: true
        type: choice
        options:
          - 'src/index.html'
          - 'service/index.html'

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2
      with:
        ref: ${{ github.event.inputs.file_path == 'src/index.html' && 'main' || 'maintenance' }}

    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v1
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: ap-northeast-1

    - name: Upload index.html to S3
      run: |
        if [ "${{ github.event.inputs.file_path }}" == "src/index.html" ]; then
          aws s3 cp src/index.html s3://${{ secrets.S3_BUCKET_NAME }}/index.html
        else
          aws s3 cp service/index.html s3://${{ secrets.S3_BUCKET_NAME }}/index.html
        fi
